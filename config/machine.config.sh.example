# Type: libvirt, aws or azure
BUILD_TYPE="libvirt"

# Profile
VM_NAME="director"
SITE_NAME="site"
CLUSTER_NAME="cluster"
DOMAIN="$SITE_NAME.compute.estate"
CLUSTER_DOMAIN="$CLUSTER_NAME.$DOMAIN"
PROFILE_SCRIPT="director.sh"

# Network
EXT_IFACE="eth0"

SITE_IP="10.254.254.1"
SITE_IFACE="eth1"

PRI_IP="10.10.254.1"
PRI_IFACE="eth2"

MGT_IP="10.11.254.1"
MGT_IFACE="eth3"

# Auth 
DEFAULT_USER="flightadmin"
SSH_PUB_KEY="ssh-rsa MY_KEY_HERE user@host"
ROOT_PASS="ReplaceMe"

# Disk
DISK_SIZE="128G"
